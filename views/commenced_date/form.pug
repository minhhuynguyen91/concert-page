form(action=action method=method)
  .form-group
    label(for="start_date") Start date
    
    #startDatePicker.input-group.date(data-target-input='nearest')
      input.form-control.datetimepicker-input(
        type="text"
        id="start_date"
        name="start_date"
        data-target='#startDatePicker'
        value=moment(commencedDate.start_date).format('DD/MM/YYYY')
      )
      .input-group-append(data-target='#startDatePicker', data-toggle='datetimepicker')
          .input-group-text
            i.fa.fa-calendar

  .form-row

    .form-group.col-lg-6.col-md-12
      label(for="start_date") Start time:
      #startTimePicker.input-group.date(data-target-input='nearest')

        input.form-control.datetimepicker-input(
          type="text"
          id="start_time"
          name="start_time"
          data-target="#startTimePicker"
          value=commencedDate.start_time
        ) 

        .input-group-append(data-target='#startTimePicker', data-toggle='datetimepicker')
          .input-group-text
            i.fas.fa-clock

    .form-group.col-lg-6.col-md-12
      label(for="end_time") End time:
      #endTimePicker.input-group.date(data-target-input='nearest')
        input.form-control.datetimepicker-input(
          type="text"
          id="end_time"
          name="end_time"
          data-target="#endTimePicker"
          value=commencedDate.end_time
        )

        .input-group-append(data-target='#endTimePicker', data-toggle='datetimepicker')
          .input-group-text
            i.fas.fa-clock

  
  .form-group
    label(for="_concert_id") Concert title
    select#_concertId.custom-select.mr-sm-2(name='concertName')
      option(selected='') Ch·ªçn ...
      each concert in concerts
        option(select=concert._id, name="_concertId")= concert.title
      
  button.btn.btn-primary(type="submit" value="Submit") Submit
  
  
script(type="text/javascript").
  $(function () {
    $('#startDatePicker').datetimepicker({
      format: 'DD/MM/YYYY',
      locale: 'vi'
    });

    $('#startTimePicker').datetimepicker({
      format: 'HH:mm',
      locale: 'vi'
    });

    $('#endTimePicker').datetimepicker({
      format: 'HH:mm',
      locale: 'vi'
    });

  });