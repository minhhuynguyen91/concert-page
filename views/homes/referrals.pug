.container.pt-2
  
  h2.h1-responsive.font-weight-bold.my-5.pb-2.text-center(style="text-transform: uppercase;") Tin Tá»©c
  .row

  #carouselReferralNews.carousel.slide(data-ride='carousel')
    .carousel-inner(role="listbox")
      - var divClass = null
      each referral, index in referrals
        if ((index % 2 ) == 0)
          if (index == 0)
            - divClass = "carousel-item active"
          else
            - divClass = "carousel-item"

          div(class=divClass)
            .row
              each data, j in referrals
                if ((j - index >= 0) && (j - index < 2))
                  if ((j - index) == 0)
                    .col-lg-2.col-sm-2
                    .col-lg-4.col-sm-4
                      .card.mt-4.border-2
                        img.rounded.text-center.referral-image-thumbnail(src=data.thumbnail_image_url)
                        .card-body
                          .card-text.text-center
                            a(href=data.url) #{data.title}

                  if ((j - index) == 1)
                    .col-lg-4.col-sm-4
                      .card.mt-4.border-2
                        img.rounded.text-center.referral-image-thumbnail(src=data.thumbnail_image_url)
                        .card-body
                          .card-text.text-center
                            a(href=data.url) #{data.title}                  
                    .col-lg-2.col-sm-2

    a.carousel-control-prev.btn-floating.light-blue.darken-4(href='#carouselReferralNews', role='button', data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#carouselReferralNews', role='button', data-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.sr-only Next
